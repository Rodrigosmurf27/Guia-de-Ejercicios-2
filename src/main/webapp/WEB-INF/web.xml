<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- ClienteServlet para Car Clean -->
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>com.empresa.servlets.ClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/ClienteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VacacionesServlet</servlet-name>
        <servlet-class>com.empresa.servlets.vacacionesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VacacionesServlet</servlet-name>
        <url-pattern>/vacacionesServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactoServlet</servlet-name>
        <servlet-class>com.empresa.servlets.ContactoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContactoServlet</servlet-name>
        <url-pattern>/ContactoServlet</url-pattern>
    </servlet-mapping>

    <!-- redireccion a FichaEstudianteServlet -->
    <servlet>
        <servlet-name>FichaEstudianteServlet</servlet-name>
        <servlet-class>com.empresa.servlets.FichaEstudianteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FichaEstudianteServlet</servlet-name>
        <url-pattern>/ficha</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
